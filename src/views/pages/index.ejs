    <style>
      * {
        font-family: 'Montserrat', sans-serif;
      }

      .header {
        color: #7CAB2F;
        margin-top: 0;
        margin-left: 20px;
        height: 60px;
      }

      .header svg {
        float:left;
      }

      .header span {
        float:left;
        line-height: 61px;
        padding-left: 10px;
      }

      .header a {
        color: #333;
        font-size: 1rem;
        line-height: 61px;
        display: block;
      }
      .profile {
        clear: both;
        margin: 10px;
      }

      .profile-info {
        float: left;
        width: 170px;
      }

      .profile-calendar h1 {
        margin-top: 0;
        margin-left: 32px;
        margin-bottom: 18px;
        float: left;
      }

      .profile-calendar a {
        float: right;
        line-height: 40px;
      }

      .profile-calendar .vcard-fullname {
        font-size: 18px;
        line-height: 22px;
        display: block;
      }

      .profile-calendar .vcard-username {
        font-size: 14px;
        font-style: normal;
        font-weight: 300;
        line-height: 16px;
        color: #666;
        display: block;
      }

      .profile-info .avatar {
        display: inline-block;
        overflow: hidden;
        line-height: 1;
        vertical-align: middle;
        border-radius: 6px;
        width: 170px;
        height: 170px;
      }

      .profile-calendar {
        float: left;
        padding: 6px 10px 10px;
      }

      .profile-calendar .js-calendar-graph {
        font-size: 0.6rem;
        clear: both;
      }

      .profile-calendar svg {
        fill: #666;
      }

      .profile hr {
        clear: both;
      }

      svg {
        fill: #7CAB2F;
        display: block;
      }

      .light {
        opacity: 0.3;
      }

      .medium {
        opacity: 0.56;
      }

      .dark {
        opacity: 0.88;
      }

      #arm {
        transform-origin: bottom right;
        animation: swing-arm 1s alternate infinite;
      }

      @keyframes swing-arm {
        0% {
          transform: rotate(10deg);
        }

        100% {
          transform: rotate(-10deg);
        }
      }

      .loader-rotate {
        transform-origin: center center;
        animation: spinner-steps .9s steps(8) infinite;
      }

      @keyframes spinner-steps {
        from { transform: rotate(0deg); }
        to   { transform: rotate(360deg); }
      }
    </style>
